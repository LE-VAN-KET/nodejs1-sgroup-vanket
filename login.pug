extends ../layout/comon.pug
block content
    h1 login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="POST")
        .form-group
            label(for='email') Email
            input#email.form-control(type="text", name="email", value= values ? values.email : '')
        .form-group
            label(for='password') Name
            input#name.form-control(type="password", name="password", value= values ? values.name : '')
        button.btn.btn-primary(type="submit") submit

        